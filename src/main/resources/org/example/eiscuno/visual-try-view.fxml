<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.eiscuno.controller.WelcomeController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="700.0" pickOnBounds="true">
         <image>
            <Image url="@images/backgroundUno1.png" />
         </image>
      </ImageView>
      <HBox alignment="CENTER" layoutX="183.0" layoutY="390.0" prefHeight="96.0" prefWidth="335.0" spacing="50.0" stylesheets="@css/style.css">
         <children>
            <Button fx:id="playButton" mnemonicParsing="false" onAction="#handlePlayButton" prefHeight="41.0" prefWidth="123.0" text="New Game" />
            <Button fx:id="continueButton" mnemonicParsing="false" onAction="#handleContinueButton" text="Continue Game" textAlignment="CENTER" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="230.0" layoutY="332.0" prefHeight="58.0" prefWidth="241.0">
         <children>
            <TextField fx:id="userTxt" promptText="Digita tu nombre" />
         </children></HBox>
   </children>
</AnchorPane>
