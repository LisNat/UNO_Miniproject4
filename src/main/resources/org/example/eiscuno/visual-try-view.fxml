   <children>
      <ImageView fitHeight="500.0" fitWidth="700.0" pickOnBounds="true">
         <image>
            <Image url="@images/backgroundUno1.png" />
         </image>
      </ImageView>
      <HBox alignment="CENTER" layoutX="183.0" layoutY="314.0" prefHeight="96.0" prefWidth="335.0" spacing="50.0" stylesheets="@css/style.css">
         <children>
            <Button fx:id="playButton" mnemonicParsing="false" onAction="#handlePlayButton" prefHeight="41.0" prefWidth="123.0" text="New Game" />
            <Button fx:id="continueButton" mnemonicParsing="false" onAction="#handleContinueButton" text="Continue Game" textAlignment="CENTER" />
         </children>
      </HBox>
   </children>
</AnchorPane>
